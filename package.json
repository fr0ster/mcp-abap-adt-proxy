{
  "name": "@mcp-abap-adt/proxy",
  "version": "0.1.9",
  "description": "MCP proxy server for SAP ABAP ADT - proxies local requests to cloud-llm-hub with JWT authentication",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "chrono": "./tools/version-stats.sh",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
    "test:check": "npx tsc --noEmit --project tsconfig.test.json",
    "lint": "npx biome check --write src",
    "lint:check": "npx biome check src",
    "format": "npx biome format --write src",
    "build": "npm run --silent clean && npx biome check src --diagnostic-level=error && npx tsc -p tsconfig.json",
    "build:fast": "npx tsc -p tsconfig.json",
    "start": "node ./bin/mcp-abap-adt-proxy.js",
    "start:http": "node ./bin/mcp-abap-adt-proxy.js --transport streamable-http",
    "start:sse": "node ./bin/mcp-abap-adt-proxy.js --transport sse",
    "dev": "npx @modelcontextprotocol/inspector node ./dist/index.js",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "prepublishOnly": "npm run build",
    "test:servers": "node ./tools/start-servers.js",
    "test-destination": "npx tsx tools/test-destination.ts"
  },
  "keywords": [
    "abap",
    "sap",
    "adt",
    "mcp",
    "model-context-protocol",
    "proxy"
  ],
  "author": "Oleksii Kyslytsia <oleksij.kyslytsja@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fr0ster/mcp-abap-adt-proxy.git"
  },
  "homepage": "https://github.com/fr0ster/mcp-abap-adt-proxy#readme",
  "bugs": {
    "url": "https://github.com/fr0ster/mcp-abap-adt-proxy/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@jest/globals": "^30.2.0",
    "@modelcontextprotocol/inspector": "^0.20.0",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.3",
    "commander": "^14.0.3",
    "cors": "^2.8.6",
    "cross-env": "^10.1.0",
    "express": "^5.1.0",
    "jest": "^30.2.0",
    "jest-util": "^30.2.0",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.2.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@mcp-abap-adt/auth-broker": "^1.0.5",
    "@mcp-abap-adt/auth-providers": "^1.0.5",
    "@mcp-abap-adt/auth-stores": "^1.0.2",
    "@mcp-abap-adt/header-validator": "^0.1.8",
    "@mcp-abap-adt/interfaces": "^2.3.0",
    "@mcp-abap-adt/logger": "^0.1.4",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "axios": "^1.13.5",
    "js-yaml": "^4.1.1",
    "zod": "^4.3.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "bin": {
    "mcp-abap-adt-proxy": "./bin/mcp-abap-adt-proxy.js"
  }
}
